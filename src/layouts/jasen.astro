---
import fetchMemberships from "@/utils/fetchMemberships"

let supporterData = await fetchMemberships()


---
<div class="flex flex-col items-center gap-6">
  {supporterData.length > 0 ? (
    supporterData.map((supporter) => (
      <a 
        href={supporter.link} 
        target="_blank" 
        rel="noopener noreferrer"
        title={supporter.title} 
        class="relative z-10 flex items-center justify-center p-4 bg-white rounded-md shadow-md hover:scale-105 transition-transform w-40 h-20 sm:w-48 sm:h-24 cursor-pointer"
      >
        {supporter && (
          <img
            src={supporter.imgUrl} 
            alt={supporter.title}
            class="w-40 h-20 object-contain"
            loading="lazy"
          />
        )}
      </a>
    ))
  ) : (
    <p>No supporters available</p> // Show a message if no data is found
  )}
</div>