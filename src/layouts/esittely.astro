---
import type { TervetuloaProcessed } from "@/utils/fetchindex";
import fetchLogoImage from "@/utils/fetchlogo";
import fs from 'fs-extra';
import path from 'path'

// components/SupporterCard.astro
const  data : TervetuloaProcessed | null  = Astro.props.data;


let logourl : string = await fetchLogoImage()



---

{data ? (
  <div class="w-full max-w-5xl mx-auto bg-white/55 rounded-3xl shadow-xl border border-green-200/60 px-8 py-12 space-y-6 text-center">
    <div class="flex justify-center items-center">
      <img 
        src={logourl}  
        alt="logo" 
        width="200" 
        height="150" 
        loading="eager"
        class="w-full max-w-[220px] sm:max-w-[260px] md:max-w-[300px] h-auto object-contain p-2 bg-amber-50/60 border border-white/50 rounded-xl shadow-md backdrop-blur-sm"
      />
    </div>

    <h1 class="text-4xl sm:text-5xl font-extrabold text-green-800">
      {data.otsikko}
    </h1>

    <div
      class="w-full text-center text-lg sm:text-xl text-gray-600/90 leading-relaxed space-y-2"
      set:html={data.kuvaus}
    />
  </div>
) : (
  <p class="text-lg text-gray-500">Lataa...</p>
)}