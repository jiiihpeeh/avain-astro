---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props as Props;

const id = crypto.randomUUID();
const baseId = `popup-${id}`;
const buttonId = `${baseId}-button`;
const boxId = `${baseId}-box`;
const containerId = `${baseId}-container`;
---

<div class="relative inline-block" id={containerId}>
  <button
    id={buttonId}
    class="bg-teal-500 text-white px-4 py-2 rounded-full shadow-lg hover:bg-gray-600 transition-colors"
  >
    {title}
  </button>
  <div
    id={boxId}
    class="absolute left-1/2 transform -translate-x-1/2 bg-white p-4 rounded-lg shadow-lg border border-gray-300 text-sm text-gray-700 min-w-[260px] max-w-[400px] whitespace-normal opacity-0 pointer-events-none transition-opacity duration-300 z-50"
  >
    {description}
  </div>
</div>

