---

import  returnGallery  from '@/utils/gallerydl'
import HtmlBody from '@/layouts/htmlbody.astro';
import Gallery, { type ImageData } from '@/components/ImageGallery';
import type { Galleries, BaseGallery } from '@/utils/gallerydl';
import '../styles/global.css';

let galleryData : Galleries  = await returnGallery();


---
<HtmlBody>
  {galleryData.map((gallery: BaseGallery) => (
    <>
      <h3 class="pt-8 text-4xl font-semibold text-green-800 mb-6 sm:text-5xl">
        {gallery.description}
      </h3>

      <div class="px-4 sm:px-6 md:px-12">
        <Gallery client:load data={gallery.images} />
      </div>
    </>
  ))}
</HtmlBody>
