---
import '../styles/global.css';
// Component Imports


import {fetchPersonnel, fetchAddress} from '@/utils/fetchcontacts';
import '../styles/global.css';

import HtmlBody from "@/layouts/htmlbody.astro";

const workers = await fetchPersonnel();
const address = await fetchAddress();

---

<HtmlBody>
  <div class="text-center pt-32 py-12 px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-semibold text-green-800 mb-6 sm:text-5xl">
      Henkil√∂kunta
    </h1>

    <div class="flex flex-wrap justify-center gap-4">
      {workers.map((item) => (
        <div class="w-full sm:w-1/2 lg:w-1/3 p-4">
          <div class="h-full flex flex-col gap-6 rounded-xl border border-gray-200 bg-white/75 shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out">            
            <!-- Header Section (Name and Title) -->
            <div class="flex flex-col items-center px-6 pt-4 pb-1 text-center mt-1">
              <div class="text-xl font-semibold text-green-600">{item.nimi}</div>
              <div class="text-green-500">{item.nimike}</div>
            </div>

            <!-- Image Section -->
            <div class="flex justify-center items-center -mb-2 px-6">
              <picture>
                <source srcset={`${item.kuva.url}.avif`} type="image/avif" />
                <source srcset={`${item.kuva.url}.webp`} type="image/webp" />
                <img src={`${item.kuva.url}.jpg`} loading="lazy" class="rounded-lg max-w-full h-auto object-cover" />
              </picture>
            </div>

            <!-- Description & Contact Info -->
            <div class="text-center px-6 text-muted-foreground text-sm">
              <p>{item.kuvaus}</p>
              <br />
              
              <!-- Phone -->
              {item.puhelin && (
                <a href={`tel:${item.puhelin}`} class="block text-green-600 hover:underline">{item.puhelin}</a>
              )}

              <!-- Email -->
              {item.email && item.email.length > 0 && (
                <a href={`mailto:${item.email}`}    class="block text-green-600 hover:underline">{item.email}</a>
              )}
            </div>

            <!-- Footer (Greetings) -->
            <div class="text-center px-6 mt-1 mb-4 text-sm text-gray-600 flex items-center justify-center min-h-[3rem]">
              <p  class="text-wrap">{item.tervehdys}</p>
            </div>

          </div>
        </div>

      ))}
    </div>

    {address && (
      <section class="mt-12 bg-green-100/30 border border-green-300 rounded-lg p-4 shadow-sm max-w-2xl mx-auto">
        <h4 class="text-lg font-semibold mb-2 text-green-800">Osoite</h4>
        <p class="text-gray-800">{address.Katuosoite}</p>
        <p class="text-gray-800">
          {address.Postinumero} {address.Toimipaikka}
        </p>
        {address.Lisatiedot && address.Lisatiedot.length > 0 && (
          <p class="italic text-gray-500 mt-2">{address.Lisatiedot}</p>
        )}
      </section>
    )}
  </div>
</HtmlBody>